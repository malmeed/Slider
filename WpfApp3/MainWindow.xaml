<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider 
           x:Name="slider"
            Minimum="0"
            Maximum="10"
            Value="5"
            HorizontalAlignment="Left"
            Margin="196,134,0,0" VerticalAlignment="Top" Width="495" ValueChanged="Slider_ValueChanged"/>
        <TextBlock
            x:Name="tb_value_slider"
            HorizontalAlignment="Left" Margin="323,235,0,0"
            TextWrapping="Wrap" Text="5" VerticalAlignment="Top"/>
        <ProgressBar 
            Minimum="0"
            Maximum="15"
            Orientation="Vertical"
            Margin="727,71,45,0"
            VerticalAlignment="Top" Height="313"/>


    </Grid>
</Window>
